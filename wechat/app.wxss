.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
 /* padding: 200rpx 0;*/
  box-sizing: border-box;
} 
/*下面是自定义toast*/
.toast-out {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  width: 100%;
  height: 100%;
  display: flex;  
  flex-direction: column;/*因为container里面也有，不然影响布局*/
  justify-content: center;
  align-items: center;
}
.toast-out .toast-in {
  width: 235rpx;
  height: 235rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 3rpx;
  text-align: center;
  color: white;
  border-radius: 18rpx;
}
.toast-out .toast-in image {
   height: 130rpx;
   width: 130rpx;
}
.toast-txt {
  font-size: 25rpx;
}